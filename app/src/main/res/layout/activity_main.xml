<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sensor Values Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- PH Value Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/roundedbackground"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/ph_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/ph_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ph_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- TDS Value Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/roundedbackground"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tds_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TDS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tds_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tds_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Turbidity Value Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/roundedbackground"
            android:padding="16dp">

            <TextView
                android:id="@+id/turbidity_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turbidity"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/turbidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/turbidity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Volume Percentage Rectangle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/md_theme_onPrimaryFixedVariant"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/kualitas_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kualitas Air : "
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#A88843"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/volume_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sisa Pakan: 0%"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Relay Control Button -->
    <Button
        android:id="@+id/relay_control_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="Nyalakan Relay"
        android:layout_gravity="center" />

</LinearLayout>
